<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <display-name>iRINGTools Services</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>WEB-INF/services.xml</param-value>
  </context-param>
  <context-param>
    <param-name>directoryServiceUri</param-name>
    <param-value>http://localhost:8080/services/dir</param-value>
  </context-param>
  <context-param>
    <param-name>differencingServiceUri</param-name>
    <param-value>http://localhost:8080/services/diff</param-value>
  </context-param>
  <context-param> 
    <param-name>IDGenServiceUri</param-name>
    <param-value>http://localhost:8080/services/idgen</param-value>
  </context-param>
  <context-param>
    <param-name>poolSize</param-name>
    <param-value>200</param-value>
  </context-param>
  <context-param>
    <param-name>numOfExchangeLogFiles</param-name>
    <param-value>10</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>CXFServlet</servlet-name>
    <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>CXFServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>