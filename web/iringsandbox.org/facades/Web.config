<?xml version="1.0"?>
<configuration>
  <appSettings>
    <add key="dotNetRDFConfig" value="~/config/config.ttl" />
  </appSettings>

  <system.web>
    <compilation debug="true" targetFramework="4.0" />
    <httpHandlers>
      <add path="/facades/bentley/*" verb="*" type="VDS.RDF.Web.SparqlServer" />
    </httpHandlers>
    <httpRuntime maxQueryStringLength="8192" requestValidationMode="2.0" />
  </system.web>

  <system.webServer>
    <handlers>
      <add name="/facades/bentley/*" path="bentley/*" verb="*" type="VDS.RDF.Web.SparqlServer" />
	  <add name="/facades/bentleypid/*" path="bentleypid/*" verb="*" type="VDS.RDF.Web.SparqlServer" />
	  <add name="/facades/bentleydpt/*" path="bentleydpt/*" verb="*" type="VDS.RDF.Web.SparqlServer" />
    </handlers>
    <modules runAllManagedModulesForAllRequests="true">
      <add name="UrlRoutingModule" type="System.Web.Routing.UrlRoutingModule, System.Web, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a" />
    </modules>
    <validation validateIntegratedModeConfiguration="false" />
  </system.webServer>
  
</configuration>
