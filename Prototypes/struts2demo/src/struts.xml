<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />

  <package name="basicstruts2" extends="struts-default">
    <action name="index">
      <result>/index.jsp</result>
    </action>
  </package>
  
  <package name="jsontest" extends="json-default">
    <action name="directory" class="org.iringtools.controllers.DirectoryTreeController" method="execute">
      <result type="json">
        <param name="root">directoryTree.items</param>
      </result>
    </action>
    
    <action name="dti" class="org.iringtools.controllers.DtiGridController" method="execute">
      <result type="json">
         <param name="root">dtiList</param>
      </result>
    </action>
	</package>
</struts>