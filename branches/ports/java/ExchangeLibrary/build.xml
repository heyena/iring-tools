<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="ExchangeLibrary">
	<property environment="env" />
	<property name="AdapterLibrary.location" value="../AdapterLibrary" />
	<property name="UtilityLibrary.location" value="../UtilityLibrary" />
	<property name="debuglevel" value="source,lines,vars" />
	<property name="target" value="1.6" />
	<property name="source" value="1.6" />

	<path id="guice-2.0.userclasspath">
		<pathelement location="../libraries/guice-2.0/aopalliance.jar" />
		<pathelement location="../libraries/guice-2.0/guice-2.0.jar" />
		<pathelement location="../libraries/guice-2.0/guice-assistedinject-2.0.jar" />
		<pathelement location="../libraries/guice-2.0/guice-jmx-2.0.jar" />
		<pathelement location="../libraries/guice-2.0/guice-jndi-2.0.jar" />
		<pathelement location="../libraries/guice-2.0/guice-multibindings-2.0.jar" />
		<pathelement location="../libraries/guice-2.0/guice-servlet-2.0.jar" />
		<pathelement location="../libraries/guice-2.0/guice-spring-2.0.jar" />
		<pathelement location="../libraries/guice-2.0/guice-struts2-plugin-2.0.jar" />
		<pathelement location="../libraries/guice-2.0/guice-throwingproviders-2.0.jar" />
	</path>

	<path id="axiom-1.2.8.userclasspath">
		<pathelement location="../libraries/axiom-1.2.8/axiom.jar" />
	</path>

	<path id="log4j-1.2.16.userclasspath">
		<pathelement location="../libraries/apache-log4j-1.2.16/log4j-1.2.16.jar" />
	</path>

	<path id="ExchangeLibrary.classpath">
		<pathelement location="bin" />
		<path refid="guice-2.0.userclasspath" />
		<path refid="axiom-1.2.8.userclasspath" />
		<path refid="log4j-1.2.16.userclasspath" />
		<pathelement location="${AdapterLibrary.location}/bin" />
		<pathelement location="${UtilityLibrary.location}/bin" />
	</path>

	<target name="init">
		<mkdir dir="bin" />
		<copy includeemptydirs="false" todir="bin">
			<fileset dir="src">
				<exclude name="**/*.launch" />
				<exclude name="**/.svn/" />
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>

	<target name="clean">
		<delete dir="bin" />
	</target>

	<target depends="build-subprojects,build-project" name="build" />

	<target name="build-subprojects" />
	<target depends="init" name="build-project">
		<echo message="${ant.project.name}: ${ant.file}" />
		<javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
			<src path="src" />
			<classpath refid="ExchangeLibrary.classpath" />
		</javac>
	</target>
</project>
