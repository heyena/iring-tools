<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns="http://iringtools.org/adapter/library/dto" targetNamespace="http://iringtools.org/adapter/library/dto"
	elementFormDefault="qualified">

	<xs:element name="dataTransferObjects">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="dataTransferObject" type="DataTransferObject"
					minOccurs="0" maxOccurs="unbounded" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:complexType name="DataTransferObject">
		<xs:sequence>
			<xs:element name="classObjects">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="classObject" type="ClassObject"
							minOccurs="0" maxOccurs="unbounded" />
					</xs:sequence>
				</xs:complexType>
			</xs:element>
      <xs:element name="transferType" type="TransferType" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="ClassObject">
		<xs:sequence>
			<xs:element name="classId" type="xs:string" />
			<xs:element name="name" type="xs:string" />
			<xs:element name="identifier" type="xs:string" />
			<xs:element name="templateObjects">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="templateObject" type="TemplateObject"
              minOccurs="0" maxOccurs="unbounded" />
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="transferType" type="TransferType" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="TemplateObject">
		<xs:sequence>
			<xs:element name="templateId" type="xs:string" />
			<xs:element name="name" type="xs:string" />
			<xs:element name="roleObjects">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="roleObject" type="RoleObject"
              minOccurs="0" maxOccurs="unbounded" />
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="transferType" type="TransferType" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="RoleObject">
		<xs:sequence>
			<xs:element name="roleId" type="xs:string" />
			<xs:element name="name" type="xs:string" />
			<xs:element name="value" type="xs:string" />
			<xs:element name="reference" type="xs:string" />
      <xs:element name="transferType" type="TransferType" />
		</xs:sequence>
	</xs:complexType>

	<xs:simpleType name="TransferType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="Sync" />
			<xs:enumeration value="Add" />
			<xs:enumeration value="Change" />
			<xs:enumeration value="Delete" />
		</xs:restriction>
	</xs:simpleType>
</xs:schema>