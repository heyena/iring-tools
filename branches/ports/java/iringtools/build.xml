<?xml version="1.0" encoding="UTF-8"?>
<!-- prereqs: set JAVA_HOME and TOMCAT_HOME in system environment variables -->
<project name="iringtools" default="build" basedir=".">
	<property name="src.dir" value="${basedir}/src" />
	<property name="lib.dir" value="${basedir}/../libraries" />
	<property name="build.dir" value="${basedir}/WebContent/WEB-INF/classes" />
	<property name="cvs.root" value=":local:${cvsrepository.path}"/>

	<path id="classpath">
		<fileset dir="${lib.dir}" includes="**/*.jar" />
	</path>

	<target name="cvs.update">
		<!--<cvs command="update -dP" cvsroot="${cvs.root}" dest="${basedir}" />-->
	</target>

	<target name="clean">
		<delete dir="${build.dir}" />
	</target>

	<target name="build" depends="clean">
		<mkdir dir="${build.dir}" />
		<javac srcdir="${src.dir}" destdir="${build.dir}" classpathref="classpath" />
		<copy file="${src.dir}/log4j.properties" todir="${build.dir}" />
	</target>

	<target name="dist" depends="build">
		<jar jarfile="${basedir}/${ant.project.name}.jar" basedir="${basedir}/WebContent" />
	</target>

	<target name="deploy" depends="dist">

	</target>

	<target name="test" depends="dist">

	</target>
</project>
