<UserControl x:Class="InformationModel.UserControls.WorkingSpinner"  
     xmlns="http://schemas.microsoft.com/client/2007"   
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid x:Name="LayoutRoot" >
        <Canvas x:Name="canvas2" Visibility="Collapsed">
            <Canvas 
              Margin="135,5,0,0"
              Height="20" Width="20" x:Name="canvas1" RenderTransformOrigin=".5,.5">
                <Canvas.Resources>
                    <Storyboard x:Name="spinningAnimation">
                        <DoubleAnimation From="0" To="360" 
                                         RepeatBehavior="Forever" 
                                         SpeedRatio="0.75"  
                                         Storyboard.TargetName="spin"
                                         Storyboard.TargetProperty="(FrameworkElement.Angle)"/>
                    </Storyboard>
                </Canvas.Resources>
                <Canvas.RenderTransform>
                    <RotateTransform x:Name="spin" Angle="0"/>
                </Canvas.RenderTransform>
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>
   
