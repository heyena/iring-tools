      </Grid.RowDefinitions>

      <TextBlock Margin="5" x:Name="stsLeft1" Grid.Column="0" Text="LEFT" Foreground="#FF000000"/>
      <TextBlock Margin="5"  x:Name="stsCenter1" Grid.Column="1" Text="CENTER" Foreground="#FF000000" FontFamily="Portable User Interface" />
