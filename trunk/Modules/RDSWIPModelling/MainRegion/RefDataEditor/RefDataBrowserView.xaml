<UserControl 
    x:Name="RefDataBrowserView1" 
    xmlns:basics="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"          
    x:Class="org.iringtools.modelling.mainregion.refdatabrowser.RefDataBrowserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:Regions="clr-namespace:Microsoft.Practices.Composite.Presentation.Regions;assembly=Microsoft.Practices.Composite.Presentation"
    Height="Auto" Width="Auto"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d"
>
  <Grid ShowGridLines="False" x:Name="LayoutRoot" 
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto">
    <Grid.Background>
      <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFFFFFFF"/>
        <GradientStop Color="#FF286700" Offset="1"/>
      </LinearGradientBrush>
    </Grid.Background>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"  />
      <ColumnDefinition Width="1*"  />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <ItemsControl Name="Search" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Regions:RegionManager.RegionName="SearchRegion"
        		      VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

    <ItemsControl Name="ContextMenu" Grid.Row="0" Grid.Column="1" Regions:RegionManager.RegionName="ContextMenuRegion"
        		      VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

    <Grid x:Name="LayoutEditor" Grid.Row="1" Grid.Column="1">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="180"/>
      </Grid.RowDefinitions>
      
      <ItemsControl Name="ClassEditor" Grid.Row="0" Regions:RegionManager.RegionName="ClassEditorRegion" 
				          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

      <ItemsControl Name="TemplateEditor" Grid.Row="0" Regions:RegionManager.RegionName="TemplateEditorRegion" 
				          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

      <ItemsControl Name="Edits" Grid.Row="0" Regions:RegionManager.RegionName="EditsRegion" 
                  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" />

      <ItemsControl Name="Details" Grid.Row="1" Regions:RegionManager.RegionName="DetailRegion" 
				          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

      <basics:GridSplitter Opacity="0" Grid.Row="0" Height="4" 
                         HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Background="Fuchsia"/>
    </Grid>
    
    <basics:GridSplitter Opacity="0" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Width="4"/>
    
  </Grid>
</UserControl>
