<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://iringtools.org/exchange/library/directory"
  targetNamespace="http://iringtools.org/exchange/library/directory"
  elementFormDefault="qualified">

  <xs:element name="directory">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="applicationData" type="ApplicationData" />
        <xs:element name="dataExchanges" type="DataExchange" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="ApplicationData">
    <xs:sequence>
      <xs:element name="application" type="Application" minOccurs="0"
        maxOccurs="unbounded" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Application">
    <xs:sequence>
      <xs:element name="graph" type="Graph" minOccurs="0" maxOccurs="unbounded" />
    </xs:sequence>
    <xs:attribute name="name" />
    <xs:attribute name="scope" />
    <xs:attribute name="description" />
  </xs:complexType>

  <xs:complexType name="Graph">
    <xs:attribute name="name" />
    <xs:attribute name="commodity" />
  </xs:complexType>

  <xs:complexType name="DataExchange">
    <xs:sequence>
      <xs:element name="commodity" type="Commodity" minOccurs="0"
        maxOccurs="unbounded" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Commodity">
    <xs:sequence>
      <xs:element name="exchange" type="Exchange" minOccurs="0"
        maxOccurs="unbounded" />
    </xs:sequence>
    <xs:attribute name="name" />
  </xs:complexType>

  <xs:complexType name="Exchange">
    <xs:attribute name="name" />
    <xs:attribute name="id" />
  </xs:complexType>

  <xs:element name="exchangeDefinition">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="senderUri" type="xs:string" />
        <xs:element name="senderAppName" type="xs:string" />
        <xs:element name="senderAppScope" type="xs:string" />
        <xs:element name="senderGraphName" type="xs:string" />
        <xs:element name="receiverUri" type="xs:string" />
        <xs:element name="receiverAppName" type="xs:string" />
        <xs:element name="receiverAppScope" type="xs:string" />
        <xs:element name="receiverGraphName" type="xs:string" />
        <xs:element name="hashAlgorithm" type="xs:string" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>