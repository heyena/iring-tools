<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	
	<package name="basicstruts2" extends="struts-default">
	    <action name="federationManager">
	      <result>/federationManager.html</result>
	    </action>
	</package>
	
	<package name="jsontest" extends="json-default">
	  <action name="federationTree" class="org.iringtools.federationmanager.controllers.FederationController" method="execute">
	    <result type="json">
	    	<param name="root">federationTree</param>
	    </result>
	  </action>
	  <action name="federation" class="org.iringtools.federationmanager.controllers.FederationController" method="execute">
	    <result type="json">
	    	<param name="root">federation</param>
	    </result>
	  </action>
	  <action name="repositories" class="org.iringtools.federationmanager.controllers.FederationController" method="execute">
	    <result type="json">
	    	<param name="root">repositories</param>
	    </result>
	  </action>
	  <action name="idgenerators" class="org.iringtools.federationmanager.controllers.FederationController" method="execute">
	    <result type="json">
	    	<param name="root">idGenerators</param>
	    </result>
	  </action>
	  <action name="namespaces" class="org.iringtools.federationmanager.controllers.FederationController" method="execute">
	    <result type="json">
	    	<param name="root">namespaces</param>
	    </result>
	  </action>	  
	</package>
		
</struts>