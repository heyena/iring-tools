<UserControl x:Class="org.iringtools.modules.memappingregion.MappingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" 
    xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    HorizontalAlignment="Stretch"   
>
  <Grid x:Name="LayoutRoot" HorizontalAlignment="Stretch" Background="#FFF0F0F0">
<!--     
    <Grid.RowDefinitions>
      <RowDefinition Height="28"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>    
-->
    <Grid Grid.Row="0" Margin="4,4,4,4">      
        <controls:TabControl x:Name="tabMappings">
            <controls:TabItem x:Name="tabGraphMaps" Header="Graph Maps" IsEnabled="False">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <StackPanel Orientation="Horizontal" Margin="4,0,4,0">
                            <TextBox x:Name="txtLabel" BorderBrush="#8FA0AE" Width="Auto" MinWidth="150" Height="24" Text="{Binding Path=SelectedIMLabel}" IsEnabled="False"/>
                            <Button x:Name="btnAddGraph" Height="24" Width="40" Margin="5,0,0,0" Content="+G" ToolTipService.ToolTip="Add Graph" ToolTipService.Placement="Top" IsEnabled="False"/>
                            <Button x:Name="btnAddTemplate" Height="24" Width="40" Margin="5,0,0,0" Content="+T" ToolTipService.ToolTip="Add Template" ToolTipService.Placement="Top" IsEnabled="False"/>
                            <Button x:Name="btnMap" Height="24" Width="40" Margin="5,0,0,0" Content="+M" ToolTipService.ToolTip="Add Map" ToolTipService.Placement="Top" IsEnabled="False"/>
                            <ComboBox x:Name="cbValueList" MinWidth="120" Margin="5,0,0,0" Height="24" IsEnabled="False"/>
                            <Button x:Name="btnAddValueList" Height="24" Width="40" Margin="1,0,0,0" Content="+VL" ToolTipService.ToolTip="Add Value List" ToolTipService.Placement="Top" IsEnabled="False"/>
                            <Button x:Name="btnDelete" Height="24" Width="40" Margin="5,0,0,0" Content="DEL" ToolTipService.ToolTip="Delete" ToolTipService.Placement="Top" IsEnabled="False"/>
                            <Button x:Name="btnSave" Height="24" Width="40" Margin="5,0,0,0" Content="SAVE" ToolTipService.ToolTip="Save Mapping File" ToolTipService.Placement="Top" IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                    <controls:TreeView Grid.Row="1" Margin="4,4,4,4" x:Name="tvwMapping" VerticalAlignment="Stretch" Height="Auto" BorderBrush="#8FA0AE" BorderThickness="1"  />
                </Grid>                        
            </controls:TabItem>
            <controls:TabItem x:Name="tabValueMaps" Header="Value Maps" IsEnabled="False">                                
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <StackPanel Orientation="Horizontal" Margin="4,0,4,0">
                                <TextBox x:Name="txtvLabel" BorderBrush="#8FA0AE" Width="Auto" MinWidth="150" Height="24" Text="{Binding Path=SelectedIMLabel}" IsEnabled="False"/>
                                <Button x:Name="btnvAddValue" Height="24" Width="40" Margin="5,0,0,0" Content="+V" ToolTipService.ToolTip="Add Value" ToolTipService.Placement="Top" IsEnabled="False"/>
                                <Button x:Name="btnvAddValueList" Height="24" Width="40" Margin="5,0,0,0" Content="+VL" ToolTipService.ToolTip="Add Value List" ToolTipService.Placement="Top" IsEnabled="False"/>
                                <Button x:Name="btnvMoveUp" Height="24" Width="40" Margin="5,0,0,0" Content="Up" ToolTipService.ToolTip="Move Value Up" ToolTipService.Placement="Top" IsEnabled="False"/>
                                <Button x:Name="btnvMoveDown" Height="24" Width="40" Margin="5,0,0,0" Content="Dn" ToolTipService.ToolTip="Move Value Down" ToolTipService.Placement="Top" IsEnabled="False"/>
                                <Button x:Name="btnvDelete" Height="24" Width="40" Margin="5,0,0,0" Content="DEL" ToolTipService.ToolTip="Delete" ToolTipService.Placement="Top" IsEnabled="False"/>
                                <Button x:Name="btnvSave" Height="24" Width="40" Margin="5,0,0,0" Content="SAVE" ToolTipService.ToolTip="Save Mapping File" ToolTipService.Placement="Top" IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                        <controls:TreeView Grid.Row="1" Margin="4,4,4,4" x:Name="tvwValues" VerticalAlignment="Stretch" Height="Auto" BorderBrush="#8FA0AE" BorderThickness="1"/>
                    </Grid>
                </controls:TabItem>
        </controls:TabControl>
        <TextBlock Height="29" Margin="0,0,18,23" VerticalAlignment="Bottom" Text="Mapping" FontFamily="Portable User Interface" FontSize="20" FontStyle="Italic" FontWeight="Bold" Opacity="0.1" Width="106" HorizontalAlignment="Right"/>
    </Grid>
  </Grid>
</UserControl>
